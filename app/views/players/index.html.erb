<h1>THere are <%= @players.count %> players in our league</h1>

<table>
  <thead>
  <tr>
    <td>First Name</td>
    <td>Last Name</td>
    <td>Actions</td>
  </tr>
  </thead>

  <tbody>
  <% @players.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
      <td>
        <a href="/players/<%= player.id %>"> Show Profile </a> |
        <a href="/players/<%= player.id %>/edit"> Edit Profile</a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<a href="/players/new">Add Player</a>